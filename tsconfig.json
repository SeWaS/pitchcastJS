{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "strictNullChecks": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src/server.ts",
    "src/e2e/*.spec.ts",
    "src/modules/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}