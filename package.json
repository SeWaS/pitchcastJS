  "bugs": {
    "url": "https://github.com/SeWaS/pitchcastJS/issues"
  },
  "homepage": "https://github.com/SeWaS/pitchcastJS#readme",
  "devDependencies": {
    "@nestjs/testing": "^5.0.1",
    "@types/jest": "^23.3.0",
    "@types/joi": "^13.4.0",
    "@types/node": "^10.5.3",
    "jest": "^23.4.1",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
